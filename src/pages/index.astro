---
import Layout from '../layouts/Layout.astro';
import AstroCards from '../components/AstroCards.astro';
---

<Layout title="Tile Uy - Estudio de Arquitectura ">
	<main>
		<h1>Estudio de Arquitectura <span class="text-gradient">Tile Uy</span></h1>
		<AstroCards />
		<h1 class="text-3xl font-bold text-primary">
			Hello TailWindCSS!
		</h1>
	</main>
</Layout>

<style>
	main {
		margin: auto;
	}
	main.narrow {
		padding: 1.5rem;
		max-width: 60vw;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
